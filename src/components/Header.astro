---
import Cart from "../components/Cart.astro";

const user = Astro.cookies.get("user");
const hasUser = user !== undefined && user.value !== "";
---

<header>
  <div class="container">
    <section>
      <a href="/">
        <img src="/pokemon-logo.webp" alt="Pokemon Logo" />
      </a>
      {
        hasUser && (
          <span>
            Welcome, <b>{user.json().ign}</b>
          </span>
        )
      }
    </section>

    <nav>
      <a href="/store">Store</a>
      {
        hasUser ? (
          <>
            <a href="/profile">Profile</a>
            <button type="button" onclick="displayCart()">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="1em"
                height="1em"
                viewBox="0 0 24 24"
              >
                <path
                  fill="currentColor"
                  d="M17 18a2 2 0 0 1 2 2a2 2 0 0 1-2 2a2 2 0 0 1-2-2c0-1.11.89-2 2-2M1 2h3.27l.94 2H20a1 1 0 0 1 1 1c0 .17-.05.34-.12.5l-3.58 6.47c-.34.61-1 1.03-1.75 1.03H8.1l-.9 1.63l-.03.12a.25.25 0 0 0 .25.25H19v2H7a2 2 0 0 1-2-2c0-.35.09-.68.24-.96l1.36-2.45L3 4H1zm6 16a2 2 0 0 1 2 2a2 2 0 0 1-2 2a2 2 0 0 1-2-2c0-1.11.89-2 2-2m9-7l2.78-5H6.14l2.36 5z"
                />
              </svg>
            </button>
            <form action="/" method="post" onsubmit="signOutUser(event)">
              <button>Sign Out</button>
            </form>
          </>
        ) : (
          <a href="/registration">Sign In</a>
        )
      }
    </nav>
  </div>
</header>

<Cart />

<script is:inline>
  function displayCart() {
    const overlay = document.querySelector(".overlay");
    overlay.setAttribute("data-open", true);

    const dialog = document.querySelector(".dialog");
    dialog.setAttribute("data-open", true);

    const body = document.body;
    body.style.height = "100svh";
    body.style.overflowY = "hidden";
  }
</script>

<style scoped>
  header {
    font-size: 1.5rem;
    border-bottom: 1px solid var(--neutral);
  }

  div {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-block: 2rem;
  }

  a[href="/registration"] {
    background: var(--teal); /* fallback for old browsers */
    background: -webkit-linear-gradient(
      to right,
      var(--cyan),
      var(--teal)
    ); /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(
      to right,
      var(--cyan),
      var(--teal)
    ); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    color: white;
    padding: 1rem 2rem;
    font-weight: bold;
    border-radius: 1.5rem;
  }

  nav {
    display: flex;
    column-gap: 2rem;
    align-items: center;

    a:not([href="/registration"]) {
      font-weight: bold;
      font-size: 1.75rem;
    }
  }

  section {
    display: flex;
    align-items: center;
    column-gap: 2rem;
  }

  form > button {
    background: #b91c1c; /* fallback for old browsers */
    background: -webkit-linear-gradient(
      to right,
      #ef4444,
      #b91c1c
    ); /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(
      to right,
      #ef4444,
      #b91c1c
    ); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    color: white;
    padding: 1rem 2rem;
    border-radius: 1.5rem;
    font-weight: bold;
  }

  button:has(svg) {
    border: 1px solid var(--neutral);
    padding: 0.75rem 0.75rem;
    border-radius: 1rem;

    svg {
      width: 2.8rem;
      height: 2.8rem;
    }
  }
</style>

<script is:inline>
  function signOutUser() {
    document.cookie = "user=";
  }
</script>
